\newcommand\calcdettwo{\@ifstar{\@calcdettwo@star}{\@calcdettwo@no@star}}


% We use the macros for the colinearity.

%   #1 : option for the formatting
%
%   #2  #3		a  b
%   #4  #5		c  d

\newcommand\@calcdettwo@no@star[5][std]{%
    \IfEqCase{#1}{%
% WARNING !
%   
%   #1 : symbol for the product
%
%   #2  #3		x  x'
%   #4  #5      y  y'
        {exp}{%
            \tns@prop@prod{\,}%
                          {#2}{#3}%
                          {#4}{#5}%
        }{cexp}{%
            \tns@prop@prod{\cdot}%
                          {#2}{#3}%
                          {#4}{#5}%
        }{texp}{%
            \tns@prop@prod{\times}%
                          {#2}{#3}%
                          {#4}{#5}%
% WARNING !
%
%   #1 : option for the formatting
%
%   #2  #5		u  v
%   
%   #3  #6		x  x'
%   #4  #7      y  y'
        }{std}{%
            \tns@det@plane@deco{novec}%
                               {}{#2}{#4}%
                               {}{#3}{#5}%
        }%
    }[
    	\PackageError{tnslinalg}{unknown option}%
                                {You can use std (default), exp, cexp or sexp.}
    ]%
}


